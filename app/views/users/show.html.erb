<h1><%= @user.username %></h1>
<br /><br />
<h3>Recent Reviews:
<br /> <br />
</h3>
<h5>
<% if @reviews.blank? %>
      <h3>No reviews just yet</h3>
      <h2><%= link_to "Write Review", new_city_review_path(@city)%></h2>
    <% else %>
      <% @reviews.each do |review| %>
        <div class="reviews">
          <h4><%= link_to city_path(review.city.id) do %>
            <%= review.city.city_name %>, <% if review.city.state_name.present? %><%=review.city.state_name%>, <%end%><%= review.city.country_name %>
            <%end%>    
        </h4>
          <p><%= review.rating %></p>
          <p><%= review.comment %></p>
          <br />
        </div>
      <% end %>
    <% end %>
    </h5>
<p>
<% if @user.username == current_user.username %>
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-link' %>
<% end %>
<br />
</p>