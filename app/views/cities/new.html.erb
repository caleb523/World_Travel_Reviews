<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_for(@city) do |f| %>
      <%= f.label :city_name %>
      <%= f.text_field :city_name %>

      <%= f.label :state_name %>
      <%= f.text_field :state_name, placeholder: "(Optional)" %>

      <%= f.label :country_name %>
      <%= f.text_field :country_name %>

      <%= f.submit "Create new city", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>