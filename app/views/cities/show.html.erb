<h1><%= @city.city_name %>, <% if @city.state_name.present? %><%=@city.state_name%>, <%end%><br /><%= @city.country_name %></h1>
<br />
<br />
<br />
    
    <% if @reviews.blank? %>
      <h3>No reviews yet, would you like to add the first?</h3>
      <h2><%= link_to "Write Review", new_city_review_path(@city)%></h2>
    <% else %>
      <h3><%= "#{@reviews.length} reviews" %></h3>
      <h4><div class="star-rating" data-score= <%= @avg_review %>>Average Score: </div></h4>
      
      <br /><br />
      <% @reviews.each do |review| %>
        <div class="reviews">
          <h4><%= link_to review.user.username, user_path(review.user.username)%></h4>
          <div class="star-rating" data-score= <%= review.rating %> ></div>
          <p><%= review.comment %></p>
        </div>
        <br />
      <% end %>
      <h2><%= link_to "Write a review", new_city_review_path(@city)%></h2>
    <% end %>
  <%= link_to 'Back', cities_path %>
	<script>
	    $('.star-rating').raty({
	      path: '/assets/',
	      readOnly: true,
	      score: function() {
	            return $(this).attr('data-score');
	    }
	  });
	</script>