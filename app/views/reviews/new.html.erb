<% provide(:title, 'Review') %>

<main role="main" class="container">

  <h1>New Review</h1>

  <%= form_with model: @review, local: true do |form| %>
    
    <div class="field">
      <%= form.label :city_name %>
      <%= form.text_field :city_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :comment %>
      <%= form.text_field :comment, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :country_name %>
      <%= form.text_field :country_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :rating %>
      <%= form.text_field :rating, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :state_code %>
      <%= form.text_field :state_code, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :user_id %>
      <%= form.text_field :user_id, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Review', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <p>
    <%= link_to 'Back', reviews(@review) %>
  </p>

</main><!-- /.container -->