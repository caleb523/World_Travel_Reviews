<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <% if not current_page?(root_path)%>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color: #2d3640;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to root_path do %>
          <%= image_tag "LogoNewColorSmall.png", class: "mx-auto d-block", :alt => "WorldTravelReviews" %>
        <% end %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
          <ul class="navbar-nav m1-auto">
            <% if user_signed_in? %>
              <li class="navbar-text">Logged in as:</li>
              <li class="nav-item <%= user_path(current_user.username) %>"><nav class="shift"><%= link_to current_user.username, user_path(current_user.username), :class => 'nav-link' %></nav></li>
              <li class="nav-item"%>
                <nav class="shift">
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link'  %>
                </nav>
              </li>
            <% else %>
              <li class="nav-item <%= new_user_registration_path %>">
                <nav class="shift">
                  <%= link_to "Sign up", new_user_registration_path, :class => 'nav-link'  %>
                </nav>
              </li>
              <li class="nav-item <%= active_class(new_user_session_path) %>">
                <nav class="shift">
                  <%= link_to "Login", new_user_session_path, :class => 'nav-link'  %>
                </nav>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    <% end %>
    <% if current_page?(cities_path)%>

    
    <a>
      <form class="search-bar" action="/cities" method="get" autocomplete="off">
        <input type="simple-text" name="search" placeholder="Enter location name" required></input>
        <div class="search-icon">
          <div class="searchlogo"><%= image_tag "SearchLogo.png" %></div>
        </div>
      </form>
    </a>
    <% end %>
    <%= yield %>
    
</body>
</html>
